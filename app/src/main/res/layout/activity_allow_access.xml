<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AllowAccessActivity">

    <!-- Header Section -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_allow_access"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            app:popupTheme="@style/AppTheme.AppBarOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="20dp">

    <!-- Description Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To provide the best experience, we need access to certain permissions. Please grant the required access to continue."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp" />

    <!-- Detailed Explanation Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We require access to your location to provide personalized content based on your area. Additionally, we need access to your contacts to connect you with your friends."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginBottom="24dp" />

    <!-- Allow Access Button -->
    <Button
        android:id="@+id/btn_allow_access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allow Access"
        android:background="@drawable/custom_material_button"
        android:textColor="@android:color/white"
        android:padding="12dp" />

    </LinearLayout>

</LinearLayout>
