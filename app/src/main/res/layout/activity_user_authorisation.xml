<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hangingpage"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    tools:context=".UserAuthorisation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <View
            android:id="@+id/introScreen4"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/singleleaf"
            android:layout_gravity="center"
            android:layout_marginTop="220dp"
            />

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome\nto DhanVantri"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/primary_text_color"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discover new Plants everyday"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/secondary_text_color"/>


<!--        <EditText-->
<!--            android:id="@+id/mobileNumber"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_below="@+id/tv1"-->
<!--            android:layout_marginTop="32dp"-->
<!--            android:hint="Mobile Number"-->
<!--            android:textColorHint="@color/secondary_text_color"-->
